{
  "env": {
    "browser": true,
    "es2021": true
    // "node": true
  },
  "globals": {
    "var1": "writable",
    "var2": "readonly"
  },
  "extends": "eslint:recommended",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"]
  }
}
